{% extends 'base.html.twig' %}

{% block title %}ChatRoom{% endblock %}

{% block body %}
    <h1>ChatRoom</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ chat_room.id }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ chat_room.createdAt ? chat_room.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ chat_room.name }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('chat_room_index') }}">back to list</a>

    <a href="{{ path('chat_room_edit', {'id': chat_room.id}) }}">edit</a>

    {{ include('chat_room/_delete_form.html.twig') }}

    <br><br>
    <h3>Messages :</h3>
    <a id="refresh" href="{{ path('message_chatroom_show', {'id': chat_room.id}) }}">Refresh</a>
    <div id="messages">
        {{ render(controller('App\\Controller\\MessageController::chatRoomMessagesShow', {'id': chat_room.id})) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $( document ).ready(function() {

            const url = new URL('http://localhost:3000/hub');
            url.searchParams.append('topic', 'http://site.com/ping');
            const eventSource = new EventSource(url);
            eventSource.onmessage = e => {
                refreshMessages();
            };

            $('#refresh').on('click', function (e) {
                e.preventDefault();
                refreshMessages();

            });

            function refreshMessages() {
                $('#messages').fadeOut('slow', function(){
                    $('#messages').load($('#refresh').attr('href'), function(){
                        $('#messages').fadeIn('slow');
                    });
                });
            }

        });
    </script>
{% endblock %}